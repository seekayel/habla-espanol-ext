{
  "manifest_version": 3,
  "name": "Habla Español",
  "version": "1.0.0",
  "description": "Learn Spanish with spaced repetition - practice phrases before browsing news",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://news.google.com/*"],
    "js": ["content-script.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [{
    "resources": [
      "quiz.html",
      "quiz.js",
      "popup.html",
      "popup.js",
      "storage.js",
      "srs.js",
      "fuzzy-match.js",
      "phrases.js",
      "data/*",
      "icons/*",
      "tests/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Habla Español"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
